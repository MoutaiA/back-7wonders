{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": ["es2018", "dom"],
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules"]
}
